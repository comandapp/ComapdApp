<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/imvLogo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_comandapp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#452F00"
        android:text="¿Que tomamos hoy?"
        android:id="@+id/txtQuetomamos"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/imvLogo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Localízame"
        android:id="@+id/btnLocalizame"
        android:onClick="clickBoton"
        android:layout_below="@+id/txtQuetomamos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        style="@style/botonCustom"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Buscar local"
        android:id="@+id/btnBuscarLocal"
        android:layout_below="@+id/btnLocalizame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        style="@style/botonCustom"/>

</RelativeLayout>
