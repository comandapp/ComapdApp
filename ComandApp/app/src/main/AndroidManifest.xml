<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alumno.comandapp1" >



    <application
        android:allowBackup="true"
        android:icon="@drawable/abc_ic_search_api_mtrl_alpha"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaludoActivity"
            android:label="@string/title_activity_saludo" >
        </activity>
        <activity
            android:name=".BusquedaBar"
            android:label="@string/title_activity_busqueda_bar">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".InicioBar"
            android:label="@string/title_activity_inicio_bar" >
        </activity>
    </application>

</manifest>
