<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:background="@drawable/estilo_barseleccionado">

    <ImageView android:id="@+id/imgLogoBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_comandapp"
        android:focusable="false"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

        <TextView android:id="@+id/lblNombreComanda"
            android:text="Mi comanda de prueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/nombreBaresLista"/>

        <TextView android:id="@+id/lblNombreBar"
            style="@style/infoBaresLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrepuentes"
            android:gravity="right"
            android:focusable="false"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="20dp" />

    <TextView android:id="@+id/lblPrecioComanda"
        android:text="25.55 â‚¬"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        style="@style/nombreBaresLista"/>

</LinearLayout>