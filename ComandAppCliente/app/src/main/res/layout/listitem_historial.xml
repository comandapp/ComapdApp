<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="6dp"
    android:paddingRight="10dp"
    android:background="@drawable/estilo_barseleccionado"
    android:id="@+id/LVItemRelLayout">

    <ImageView android:id="@+id/imgBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_comandapp"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/LVIBarImg"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@+id/imageViewFavorito"
        android:layout_toStartOf="@+id/imageViewFavorito">

        <TextView android:id="@+id/lblNombreComanda"
            android:layout_weight="6"
            android:layout_marginLeft="4dp"
            style="@style/nombreBaresLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"/>

        <TextView android:id="@+id/lblFecha"
            android:layout_weight="6"
            android:layout_marginLeft="4dp"
            style="@style/infoBaresLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"/>

    </LinearLayout>

    <TextView android:id="@+id/lblPrecioComanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        style="@style/nombreBaresLista"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>