<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LytContenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LytSubMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button android:id="@+id/btnPrueba"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="PRUEBA1"
            android:layout_weight="0.5"
            android:layout_marginRight="4dp"
            android:drawableLeft="@drawable/qr_icon"
            style="@style/botonCustomSubMenu"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="PRUEBA2"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/qr_icon"
            android:layout_marginLeft="4dp"
            style="@style/botonCustomSubMenu"/>

    </LinearLayout>

    <ImageView android:id="@+id/imgQR"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
